# Copy this file to .env and fill in the values for your environment

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=notes_app

# JWT Secret (IMPORTANT: Generate a secure random value!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace_this_with_a_secure_random_64_byte_hex_string

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS - comma separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# Body Parser Limits (optional)
NOTES_BODY_LIMIT=1mb
USER_BODY_LIMIT=100kb

# Email Configuration (for email verification)
# Get Gmail app password: https://myaccount.google.com/apppasswords
# 1. Enable 2-Step Verification on your Google account
# 2. Generate an app password for "Mail"
# 3. Use that password (NOT your regular Gmail password)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=Notes App <your-email@gmail.com>
FRONTEND_URL=http://localhost:3000

# Database Initialization (DANGEROUS - only for development!)
# Set to 'true' ONLY when you want to run init.sql
# Never set to 'true' in production!
RUN_DB_INIT=false
