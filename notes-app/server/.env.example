# Copy this file to .env and fill in the values for your environment
# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=notes_app

# JWT secret used to sign auth tokens (keep this secret!)
JWT_SECRET=replace_this_with_a_secure_random_value

# Server
PORT=5000
NODE_ENV=development

# CORS - comma separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# Optional: control body parser limits
NOTES_BODY_LIMIT=1mb
USER_BODY_LIMIT=100kb

# Dangerous: only set to 'true' when you intentionally want to run the init SQL script
# (NOT recommended in production). Leave unset or 'false' in normal runs.
RUN_DB_INIT=false
